@startuml
actor User
participant "Telegram Bot" as Bot
participant "Handler" as TrainingsHandler

User -> Bot: trainings
activate Bot
Bot -> TrainingsHandler: handle_trainings(message)
activate TrainingsHandler
TrainingsHandler -> Bot: send_message(user, current_month_trainings)
deactivate TrainingsHandler
Bot -> User: Display trainings information for the current month
deactivate Bot
@enduml
